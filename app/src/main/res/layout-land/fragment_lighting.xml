<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.project.erc.energyestimator.LightingFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="53dp"
            android:layout_marginLeft="170dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <ImageView
                android:layout_height="100dp"
                app:srcCompat="@drawable/inc60"
                android:id="@+id/imageViewInc60"
                android:layout_width="125dp"
                />

            <NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/numberPickerInc60"
                android:solidColor="@color/md_light_background"

             />

            <ImageView
                android:layout_width="125dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/led10"
                android:id="@+id/imageViewLed10"
                />
            <NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/numberPickerLed10"
                android:solidColor="@color/md_light_background"

                />

            <ImageView
                android:layout_height="100dp"
                app:srcCompat="@drawable/cfl16"
                android:id="@+id/imageViewCfl16"
                android:layout_width="125dp"
                />

            <NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/numberPickerCfl16"
                android:solidColor="@color/md_light_background"

                />


        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="normal"
            app:srcCompat="@android:drawable/ic_input_add"
            android:id="@+id/floatingActionButton4"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="48dp"
            android:layout_marginBottom="26dp" />

    </RelativeLayout>

</FrameLayout>
