<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.erc.energyestimator.LightingFragment">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.project.erc.energyestimator.LightingFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="170dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

                <ImageView
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/inc60"
                    android:id="@+id/imageViewInc60"
                    android:layout_width="125dp"
                    />
                <NumberPicker
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/numberPickerInc60"
                    android:solidColor="@color/md_light_background"

                    />

                <ImageView
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/cfl16"
                    android:id="@+id/imageViewCfl16"
                    android:layout_width="125dp"
                    />

                <NumberPicker
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/numberPickerCfl16"
                    android:solidColor="@color/md_light_background"

                    />


                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/led10"
                    android:id="@+id/imageViewLed10"
                    />
                <NumberPicker
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/numberPickerLed10"
                    android:solidColor="@color/md_light_background"

                    />




            </LinearLayout>

        </RelativeLayout>

    </FrameLayout>

</FrameLayout>
