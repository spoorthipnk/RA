<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.project.erc.energyestimator.UserMenuActivity">

    <ImageView
        android:src="@drawable/update_2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:textColor="@color/darkGrey"
        android:id="@+id/UpdateEntry"
        android:layout_above="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="183dp" />

    <TextView
        android:text="Create New Entry"
        android:textColor="#111111"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="138dp" />

    <TextView
        android:text="Update Entry"
        android:textColor="#111111"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/CreateEntry"
        android:layout_alignStart="@+id/UpdateEntry" />

    <ImageView
        android:src="@drawable/create_2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:textColor="@color/darkGrey"
        android:id="@+id/CreateEntry"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="106dp" />


</RelativeLayout>
