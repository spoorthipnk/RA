<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_light"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.project.erc.energyestimator.NewLightActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"

        android:id="@+id/relativeLayout_lightType"
        android:background="#fff"
        android:elevation="4dp"
        android:orientation="vertical"

        android:layout_alignParentTop="true"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true">
            <ImageView
                android:id="@+id/imageView_lightBulb"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:elevation="4dp"
                android:src="@drawable/lightbulbicon"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:id="@+id/imageView_newLed"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:elevation="4dp"
                android:src="@drawable/led3"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
            <ImageView
                android:id="@+id/imageView_newCfl"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:elevation="4dp"
                android:src="@drawable/cfl2"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:id="@+id/relativeLayout_wattage"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp"
        android:background="#fff"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_below="@+id/realtiveLayout_lampType">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
            android:text="25W"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button25W"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
        <Button
            android:text="28W"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button28W"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
        <Button
            android:text="32W"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:id="@+id/button32W"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
            <Button
                android:text="40W"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:id="@+id/button40W"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:layout_marginStart="452dp"
                android:id="@+id/editText_lightCount"
                android:text="4"
                android:hint="#" />

        </LinearLayout>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:id="@+id/realtiveLayout_lampType"
        android:layout_marginRight="30dp"
        android:background="@color/white"

        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/relativeLayout_lightType"
       >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:text="T5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonT5"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
            <Button
                android:text="T8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonT8"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
            <Button
                android:text="T12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonT12"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />


        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>
